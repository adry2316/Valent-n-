<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>San Valentín</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f9f9f9;
            text-align: center;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .buttons {
            margin-top: 20px;
        }

        button {
            padding: 15px 30px;
            font-size: 1.2em;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        #yes {
            background-color: #ff4d4d;
            color: white;
        }

        #no {
            background-color: #ccc;
            color: black;
        }

        img {
            width: 200px;
            margin-bottom: 30px;
        }

        .message {
            margin-top: 30px;
        }

    </style>
</head>
<body>

    <div class="container">
        <!-- Imagen inicial -->
        <img src="https://i.imgflip.com/8h26xs.png" alt="Peluches abrazados">
        
        <h1>¿Quieres ser mi San Valentín?</h1>
        <div class="buttons">
            <button id="yes" onclick="accept()">Sí</button>
            <button id="no" onclick="shrinkNo()">No</button>
        </div>
    </div>

    <script>
        let noButton = document.getElementById("no");
        let yesButton = document.getElementById("yes");
        let size = 1.5;
        let clickCount = 0;

        function shrinkNo() {
            clickCount++;

            // Cambiar el texto después del primer clic
            if (clickCount === 1) {
                noButton.innerText = "¿Segura que no quieres?";
            }

            // Hacer que el botón se haga más pequeño poco a poco
            if (size > 0.1) {
                size -= 0.1;
                noButton.style.fontSize = size + "em";
                noButton.style.padding = (size * 10) + "px " + (size * 20) + "px";
            }

            // Después de varios clics, ocultar el botón
            if (size <= 0.1) {
                noButton.style.display = "none";
            }
        }

        function accept() {
            // Cambiar el texto y ocultar las opciones
            document.querySelector("h1").style.display = "none";
            document.querySelector(".buttons").style.display = "none";
            
            let messageDiv = document.createElement('div');
            messageDiv.classList.add('message');
            messageDiv.innerHTML = `<p>¡Sabía que dirías que sí, mi Ker hermosa! ❤️</p><img src="https://sweezy-cursors.com/wp-content/uploads/cursor/milk-amp-mocha-bear-love/milk-mocha-bear-love-custom-cursor.png" alt="Peluches abrazados">`;
            document.body.appendChild(messageDiv);
        }
    </script>

</body>
</html>
